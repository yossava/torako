<div class="wrapper">

  <%= render 'admins/topbar' %>
  <!-- Left side column. contains the logo and sidebar -->
  <%= render 'admins/sidebar' %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Product Lists
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Products</a></li>
        <li class="active">Product Lists</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">

      <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header">
              <h3 class="box-title">Data User</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <table id="example2" class="table table-bordered table-hover">
                <thead>
                <tr>
                  <th>ID Produk</th>
                  <th>Nama Produk</th>
                  <th>Nama Toko</th>
                  <th>Harga</th>
                  <th>Jumlah Feedback</th>
                  <th>Edit</th>
                  <th>Hapus</th>
                </tr>
                </thead>
                <tbody>
                  <% @products.each do |u| %>
                <tr>
                  <td><%= u.id %></td>
                  <td><%= u.nama_produk %></td>
                  <td><%= Toko.find(u.toko_id).nama_toko %>
                  </td>
                  <td><%= u.harga_beli %></td>
                  <td><%= u.feedbacks.count %></td>
                  <td><a href="/admin/products/<%= u.id %>">EDIT</a></td>
                  <td><%= link_to "Hapus", admin_destroy_product_path(u), method: :delete, :data => {:confirm => 'Are you sure?'}  %>

</td>
                </tr>
                <% end %>
                </tbody>
                <tfoot>
                <tr>
                 <th>ID Produk</th>
                  <th>Nama Produk</th>
                  <th>Nama Toko</th>
                  <th>Harga</th>
                  <th>Jumlah Feedback</th>
                  <th>Edit</th>
                  <th>Hapus</th>
                </tr>
                </tfoot>
              </table>
                  <div class="halaman">
                  <%= will_paginate @products %>
                  </div>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->

          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <% if params[:id] %>
      <div class="row">
        <div class="col-xs-12">
         <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Edit Produk: <%= @produk.nama_produk %></h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
              <%= form_for(@produk) do |f| %>
              <div class="box-body">
                <div class="form-group">
                  <label for="exampleInputEmail1">Nama Produk</label>
                  <%= f.text_field :nama_produk, class: "form-control", value: @produk.nama_produk %>
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Harga</label>
                  <%= f.text_field :harga, class: "form-control" %>
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Harga Diskon</label>
                  <%= f.text_field :harga_diskon, class: "form-control" %>
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Harga Terjual</label>
                  <%= f.text_field :harga_beli, class: "form-control" %>
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Berat</label>
                  <%= f.text_field :berat, class: "form-control" %>
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Gambar Produk 1</label>
                  <%= f.text_field :foto_produk1, class: "form-control" %>
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Gambar Produk 2</label>
                  <%= f.text_field :foto_produk1, class: "form-control" %>
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Gambar Produk 3</label>
                  <%= f.text_field :foto_produk1, class: "form-control" %>
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Gambar Produk 4</label>
                  <%= f.text_field :foto_produk1, class: "form-control" %>
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Gambar Produk 5</label>
                  <%= f.text_field :foto_produk1, class: "form-control" %>
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Gambar Produk 6</label>
                  <%= f.text_field :foto_produk1, class: "form-control" %>
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Deskripsi</label>
                  <%= f.text_area :deskripsi, class: "form-control" %>
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Deskripsi Lengkap</label>
                  <%= f.text_area :deskripsi_lengkap, class: "form-control", rows: "7" %>
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Nama Toko <span class="label label-warning">read only</span></label>
                  <span class="form-control"> <%= @produk.toko_id %> | <%= Toko.find(@produk.toko_id).nama_toko %></span>
                </div>

                <div class="form-group">
                  <label for="exampleInputEmail1">Dibuat Pada <span class="label label-warning">read only</span></label>
                  <span class="form-control"> <%= @produk.created_at %></span>
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Terakhir Diupdate <span class="label label-warning">read only</span></label>
                  <span class="form-control"> <%= @produk.updated_at %></span>
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">User ID <span class="label label-warning">read only</span></label>
                  <span class="form-control"> <%= @produk.user_id %> (<%= User.find(@produk.user_id).namalengkap %>)</span>
                </div>


              </div>
              <!-- /.box-body -->

              <div class="box-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <% end %>
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  <footer class="main-footer">
  </footer>


</div>
<!-- page script -->
<% if notice.to_s.include? "Produk" %>
<script>
$(function () {
    $.notiny({ text: "<%= notice %>", position: 'right-top' });
  });
</script>
<% end %>

