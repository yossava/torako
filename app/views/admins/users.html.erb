<div class="wrapper">

  <%= render 'admins/topbar' %>
  <!-- Left side column. contains the logo and sidebar -->
  <%= render 'admins/sidebar' %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        User Lists

      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Tables</a></li>
        <li class="active">Data tables</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header">
              <h3 class="box-title">Data User</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <table id="example2" class="table table-bordered table-hover">
                <thead>
                <tr>
                  <th>user_id</th>
                  <th>Nama</th>
                  <th>Email</th>
                  <th>Toko</th>
                  <th>Produk</th>
                  <th>Admin</th>
                  <th>Jadi Admin</th>
                  <th>Hapus User</th>
                </tr>
                </thead>
                <tbody>
                  <% @users.each do |u| %>
                <tr>
                  <td><%= u.id %></td>
                  <td><%= u.namalengkap %></td>
                  <td><%= u.email %>
                  </td>
                  <td><% if u.toko %><%= u.toko.nama_toko %><% else %>n/a<% end %></td>
                  <td><%= u.produks.count %></td>
                  <% if u.admin == true %>
                  <td bgcolor="#ccffcc" ><%= u.admin %></td>
                  <% else %>
                  <td bgcolor="#ffcccc" ><%= u.admin %></td>
                  <% end %>
                  <% if u.admin == false %>
                  <td><a href="/admin/beadmin/<%= u.id %>">Jadikan Admin</a></td>
                  <% else %>
                  <td><% if u.id != 13 %><a href="/admin/deladmin/<%= u.id %>">Hapus Admin</a><% else %>Super Admin<% end %></td>
                  <% end %>
                  <td><% if u.id != 13 %><%= link_to "Hapus", admin_destroy_user_path(u), method: :delete, :data => {:confirm => 'Are you sure?'}  %><% else %>Super Admin<% end %>

</td>
                </tr>
                <% end %>
                </tbody>
                <tfoot>
                <tr>
                  <th>user_id</th>
                  <th>Nama</th>
                  <th>Email</th>
                  <th>Toko</th>
                  <th>Produk</th>
                  <th>Admin</th>
                  <th>Jadi Admin</th>
                  <th>Hapus User</th>
                </tr>
                </tfoot>
              </table>
              <div class="halaman">
                  <%= will_paginate @users %>
                  </div>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->

          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  <footer class="main-footer">
  </footer>


</div>

<% if notice.to_s.include? "User" %>
<script>
$(function () {
    $.notiny({ text: "<%= notice %>", position: 'right-top' });
  });
</script>
<% end %>

