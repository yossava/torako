					<div class="row">
						<div class="col-md-12">
							<div class="headingmac">
								<h4>Tambah Rekening Bank</h4>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-md-6">
							<div class="ctnblok-logreg">
                <p id="notice"><%= notice %></p>
                <%= form_for(@rekening) do |f| %>
								<div class="form-row has-error">
									<label for="nmalamat">Nama Akun / Pemilik</label>
									<input type="text" name="rekening[pemilik]" id="nmalamat" placeholder="">
									<!--<p><i class="fa fa-exclamation-triangle"></i> &nbsp;Isikan Username</p>-->
								</div>
								<div class="form-row">
									<label for="penerima">No. Rekening</label>
									<input type="text" name="rekening[nomor_rekening]" id="penerima" placeholder="">
								</div>
								<div class="form-row">
									<label for="prov">Nama Bank</label>
									<select name="rekening[nama_bank]" id="prov">
										<option>Pilih Bank</option>
										<option>Mandiri</option>
										<option>BCA</option>
										<option>BNI</option>
									</select>
								</div>
							</div>
						</div>
						<div class="col-md-6">
							<div class="ctnblok-logreg">
								<div class="form-row">
									<label for="kdpos">Cabang</label>
									<input type="text" name="rekening[cabang]" id="kdpos" placeholder="">
									<p class="helpertext">* Contoh: KC jakarta citra 2 extension - Jakarta Barat</p>
								</div>
								<div class="form-row">
									<label for="kdpos">Password Akun Anda</label>
									<input class="passwordrek" required="true" type="password" name="user[password]" id="kdpos" placeholder="******">
								</div>
								<br>
								<div class="form-row reg">
									<input type="submit" name="" value="Simpan" class="gosignin" >
                  <% end %>
									<a href="#" id="batalbtn">Batal</a>
								</div>
							</div>
						</div>
					</div>
				</div>
